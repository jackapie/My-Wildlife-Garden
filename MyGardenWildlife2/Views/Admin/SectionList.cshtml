@model List<MyGardenWildlife2.Models.SectionModel>

@{
    ViewBag.Title = "SectionList";
    ViewBag.Heading = "Section List";
}

<table>
    <tr>
        <td>Section Name</td>
        <td>Edit</td>
        <td>Categories</td>
        <td>Delete</td>
    </tr>
    @foreach (var sectionObject in Model)
    {
        <tr>
            <td>@sectionObject.SectionName</td>
            <td>
                <a href="~/admin/sectionEdit/@sectionObject.Id">Edit</a>
            </td>
            <td>
                <a href="~/admin/categoryList/@sectionObject.Id">Category List</a>
            </td>
            <td>
                <a href="~/admin/SectionDelete/@sectionObject.Id">Delete</a>
            </td>
        </tr>
    }


</table>

<br />
<a href="~/admin/NewSection">Add new section</a>