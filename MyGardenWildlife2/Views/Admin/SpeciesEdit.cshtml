@model MyGardenWildlife2.Models.SpeciesModel
@{
    ViewBag.Title =Model.CommonName + Model.LatinName + "Species Edit";
}

<h2>@Model.CommonName @Model.LatinName Edit</h2>

<form action="" method="post">
    <input type="hidden" name="SpeciesId" value="@Model.Id"/>
    <input type="hidden" name="CategoryId" value="@Model.CategoryModel.Id" />
    <input type="text" name="CommonName" value="@Model.CommonName" />
    <input type="text" name="LatinName" value="@Model.LatinName"/>
    <br />
    <input type="submit" value="submit"/>

</form>

