@model MyGardenWildlife2.Models.SightingModel

<div>
    <div>

        <p>
            @Model.WhenSeen @Model.WhereSeen.  @if (Model.HowMany!= null)
            {
                <span>Number seen: @Model.HowMany</span>
            }
        </p>
        <p>
            @if (Model.Comment != null)
            {
                @Model.Comment
            }
        </p>
    </div>

    @if (Model.FigureList != null)
    {
        foreach (var figure in Model.FigureList)
        {
            @Html.Partial("FigureModel", figure)
        }
    }
</div>
