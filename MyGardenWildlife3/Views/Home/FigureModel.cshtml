@model MyGardenWildlife3.Models.FigureModel

<figure>
   
    @if (Model.ImgFile != null)
    {
        <img src="~/Home/GetImgById/@Model.Id" alt="@Model.Alternative" />
    }
    else
    {
        <img src="~/images/@Model.Source" alt="@Model.Alternative" />
    }

    <figcaption>@Model.Caption</figcaption>
</figure>
