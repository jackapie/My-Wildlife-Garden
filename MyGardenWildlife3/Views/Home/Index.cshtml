@{
    var dbHelper = new MyGardenWildlife3.Helpers.DatabaseHelper();
    ViewBag.Title = "MYGardenWildlife";
    //ViewBag.Heading = "Home Page";
}



<h1>Home Page</h1>

<p class="headerLinks">
    <a id="homeHeader" href="#" >Home Page</a>
    @foreach (var sectionObject in dbHelper.GetSectionList())
    {
        <a href="#">@sectionObject.SectionName</a>
    }


</p>

<div class="contentSection" id="homeSection">
    <h2>My Garden Wildlife</h2>
    <p>What this website is for</p>
    <p>What my garden is like</p>
    <p>
        <a href="#" onclick="toggleSomething('.generalPhotos');">Garden</a>
        <a href="#" onclick="toggleSomething('.animalPhotos');">Animals</a>
    </p>
    <div class="photoSection">
        <p class="generalPhotos">
            <img src="~/images/Willow.JPG" />
            <img src="~/images/Pond.JPG" />
        </p>
        <p class="animalPhotos">
            <img src="~/images/Meadow browns.JPG" />
            <img src="~/images/Ringlet.JPG" />
            <img src="~/images/Privet hawkmoth.JPG" />
            <img src="~/images/Chafer.JPG" />
            <img src="~/images/Wasp.JPG" />
            <img src="~/images/Sparrow.JPG" />
        </p>

    </div>


</div>